---
import { getCollection } from "astro:content";
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Card from "@components/Card.astro";
import getSortedPosts from "@utils/getSortedPosts";
import slugify from "@utils/slugify";
import { Image, getImage } from "astro:assets";
import Socials from "@components/Socials.astro";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);

//Images
import heroImage from "@images/images/nature-943768_1920.jpg";
import Button from "@components/Button.astro";
import Motivation from "@components/Motivation.astro";
import AnimatedH2 from "@components/AnimatedH2.astro";
import LinkNormal from "@components/LinkNormal.astro";
---

<Layout identity={true}>
  <Header activeNav="index" />
  <main id="main-content">
    <section id="hero" class="max-w-none">
      <div class="heroContent">
        <h1>
          <span id="km" class="flex items-baseline"
            ><div class="relative">
              <span id="counterNBR">
                <span class="invisible">1200</span><div
                  class="counter absolute top-0 right-0"
                  data-target="1200"
                >
                </div>
              </span>
            </div>km</span
          >
          <span>Von Kaierde bis ans Mittelmeer</span>
        </h1>
        <Button url="#spenden" txt="Spenden" color="var(--color-breadcrumbs)" className="rounded-[0.6rem] border-none text-skin-base">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="32"
            height="32"
            viewBox="0 0 24 24"
            ><path
              d="M3 11c-1.1 0-2 .9-2 2v7c0 1.1.9 2 2 2s2-.9 2-2v-7c0-1.1-.9-2-2-2zm7-5.7C10 3.45 11.45 2 13.3 2c1.04 0 2.05.49 2.7 1.25c.65-.76 1.66-1.25 2.7-1.25C20.55 2 22 3.45 22 5.3c0 2.1-2.5 4.51-5.33 7.09a1 1 0 0 1-1.35 0C12.5 9.81 10 7.4 10 5.3M19.99 17h-6.83a.96.96 0 0 1-.33-.06l-1.47-.51a.49.49 0 0 1-.3-.63c.09-.26.38-.4.64-.3l1.12.43c.11.04.24.07.36.07h2.63c.65 0 1.18-.53 1.18-1.18c0-.49-.31-.93-.77-1.11L9.3 11.13c-.22-.09-.46-.13-.7-.13H7v9.02l6.37 1.81c.41.12.85.1 1.25-.05L22 19c0-1.11-.9-2-2.01-2z"
            ></path></svg
          >
        </Button>
      </div>
      <Image
        src={heroImage}
        alt="Eine zum Wandern einladendes Alpenpanorama."
        id="heroIMG"
      />
    </section>

    <Motivation />
    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured">
            <AnimatedH2 txt="Vorgestellt" />
            <ul class="postUl">
              {featuredPosts.slice(0, SITE.feturedPosts).map(({ data }) => (
                <Card
                  href={`/posts/${slugify(data)}`}
                  frontmatter={data}
                  secHeading={false}
                />
              ))}
            </ul>
          </section>
        </>
      )
    }

    <section id="spenden">
      <div class="scroll-animation just-fade" id="spendenDiv">
        <h2 id="spendenH2">Wofür werden die Spenden verwendet?</h2>
        <p id="spendenP">
          Ich möchte mit meiner Freundin zu Fuß von Kaierde ans Mittelmeer
          laufen. Wir werden zwischen 70 und 80 Tage unterwegs sein. Ich würde
          gerne eine "Challenge" zu Gunsten unseres Freibades daraus machen: Ich
          sammele für meine Kilometer Spenden, die dann das Freibad bekommt.
        </p>
        <LinkNormal
          href="/spenden#wofur"
          ariaLabel="Weitere Informationen wofür die Spenden verwendet werden"
        />
      </div>
    </section>

    <section id="recent-posts">
      <AnimatedH2 txt="Letzte Einträge" />
      <ul class="postUl">
        {
          sortedPosts
            .filter(({ data }) => !data.featured)
            .map(
              ({ data }, index) =>
                index < 5 && (
                  <Card
                    href={`/posts/${slugify(data)}`}
                    frontmatter={data}
                    secHeading={false}
                  />
                ),
            )
        }
      </ul>
      <div class="all-posts-btn-wrapper">
        <LinkButton href="/posts" className="pagLink mx-auto">
          Alle Blogeinträge
          <svg xmlns="http://www.w3.org/2000/svg"
            ><path
              d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
            ></path>
          </svg>
        </LinkButton>
      </div>
    </section>
  </main>

  <Footer />
  <script>
    declare global {
      interface Window {
        netlifyIdentity: any;
      }
    }

    if (window.netlifyIdentity) {
      window.netlifyIdentity.on("init", (user: any) => {
        if (!user) {
          window.netlifyIdentity.on("login", () => {
            document.location.href = "/admin/";
          });
        }
      });
    }
  </script>
  <script is:inline>
    function setCounter() {
      const counters = document.querySelectorAll(".counter");
      counters.forEach((counter) => {
        counter.innerText = "0";
        const updateCounter = () => {
          const target = +counter.getAttribute("data-target");
          const count = +counter.innerText;
          const increment = target / 800;
          const speed = (target * 1.6) / (target - count);
          if (count < target) {
            counter.innerText = `${Math.ceil(count + increment)}`;
            setTimeout(updateCounter, speed);
          } else counter.innerText = target;
        };
        updateCounter();
      });
    }
    document.addEventListener("astro:page-load", setCounter);
    document.addEventListener("astro:after-swap", setCounter);
  </script>
</Layout>

<style>
  /* ===== Spenden Section ===== */
  #spenden {
    width: 100%;
    border-radius: clamp(1rem, 2rem, 3rem);
    max-width: calc(var(--site_width) - 2rem);
    margin-inline: auto;
    min-height: 65vh;
    min-height: 65svh;
    background-color: rgba(var(--color-card), 0.5);
    display: flex;
    align-items: center;
  }
  #spendenDiv {
    max-width: calc(var(--site_width) * 0.65);
    display: grid;
    margin: auto;
  }
  #spendenH2 {
    width: fit-content;
    font-weight: 700;
    line-height: 3rem;
    font-size: clamp(2rem, 1.5408rem + 2.449vw, 3.5rem);
    padding-block: 2rem;
  }
  #spendenP {
    padding-bottom: 1rem;
  }

  /* ===== Hero Section ===== */
  #hero {
    display: grid;
    grid-template-columns: 1fr 2fr;
    max-width: var(--site_width);
    gap: 2rem;
    min-height: 90vh;
    min-height: 90svh;
    padding-inline: 1rem;
    @apply pb-6 pt-8 px-4 mx-auto;
  }
  @media (max-width: 55rem) {
    #hero {
      grid-template-columns: 1fr;
    }
    .heroContent {
      max-width: calc(var(--site_width) * 0.5) !important;
    }
    #heroIMG {
      max-width: calc(var(--site_width) * 0.5);
      @apply m-auto;
    }
  }
  #heroIMG {
    margin-block: auto;
    border-radius: clamp(1rem, 2rem, 3rem);
    @apply object-cover aspect-square shadow-xl;
  }
  .heroContent {
    gap: 1.5rem;
    justify-content: flex-start;
    max-width: var(--site_width);
    min-height: 35vh;
    min-height: 35svh;
    @apply mx-auto grid content-center w-full;
  }
  .heroSocial {
    grid-area: "social";
    justify-self: flex-end;
    align-items: center;
    background-color: rgba(var(--color-fill));
    border-radius: 2rem 0 0 2rem;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
    @apply grid h-[85px] py-1 nm:gap-4 nm:pl-8 pl-2 nm:flex nm:h-auto nm:py-2;
  }
  #hero h1 {
    font-weight: 500;
    font-size: clamp(2rem, 1.8469rem + 0.8163vw, 2.5rem);
    line-height: 1;
    max-width: 40rem;
    @apply my-4 inline-block sm:my-8;
  }
  #counterNBR {
    font-size: clamp(5rem, 4.3878rem + 3.2653vw, 7rem);
  }
  #km {
    font-size: clamp(2rem, 1.3878rem + 3.2653vw, 4rem);
    color: rgb(var(--color-accent));
    font-weight: 400;
    @apply flex mb-2;
  }
  #hero .rss-link {
    @apply mb-6;
  }
  #hero .rss-icon {
    @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-3 sm:scale-125;
  }
  #hero p {
    @apply my-2;
  }
  .social-wrapper {
    @apply mt-4 flex flex-col sm:flex-row sm:items-center;
  }
  .social-links {
    @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
  }

  /* ===== Featured & Recent Posts Sections ===== */
  #featured,
  #recent-posts {
    @apply pb-6 pt-12;
  }
  article {
    display: inline-block;
    transition: all 0.5s ease-in;
    @apply text-4xl font-semibold tracking-wide underline;
  }
  article:hover {
    text-decoration-color: rgb(var(--color-accent));
    text-decoration-thickness: 10px;
  }
  .all-posts-btn-wrapper {
    @apply my-8 text-center;
  }
  .all-posts-btn-wrapper svg {
    @apply transition-all;
  }
  .all-posts-btn-wrapper:hover svg {
    transform: translateX(0.5rem);
  }
</style>
