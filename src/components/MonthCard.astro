---
import { LOCALE } from "@config";
import slugify from "@utils/slugify";
import type { CollectionEntry } from "astro:content";

export interface Props {
  posts: CollectionEntry<"blog">[],
  title: string;
}

const { posts, title } = Astro.props;
---
<h2>{title}</h2>
<ul>
{
  posts.map(({ data }) => (
    <a href={`/posts/${slugify(data)}`}>
      <time
        datetime={data.pubDatetime.toLocaleDateString(LOCALE.langTag, {
          month: "long",
          day: "2-digit",
        })}
      >
        {data.pubDatetime.toLocaleDateString(LOCALE.langTag, {
          month: "long",
          day: "2-digit",
        })}
      </time>
      <h3>{data.title}</h3>
    </a>
  ))
}    
</ul>

<style>
    h2 {
        font-size: 3rem;
        font-weight: 600;
        font-style: italic;
        text-align: center;
        min-width: 80px;
        width: min-content;
    }
  a {
    grid-template-columns: 80px 1fr;
    @apply grid gap-8;
  }
  time {
    text-align: center;
  }
  h3 {
    color: rgb(var(--color-accent));
  }
  a:hover h3 {
    color: rgb(var(--color-accent-dark));
    text-decoration: underline rgb(var(--color-accent-dark));
    text-decoration-thickness: .125rem;
  text-underline-offset: 5px;
  }
</style>
