<style>
  /* ===== Motivation ===== */
  section {
    min-height: 50rem;
    min-height: 100svh;
    background-color: rgba(var(--color-breadcrumbs), 0.3);
    border-radius: 2rem 2rem 0 0;
    @apply pb-16 px-0 md:pb-0 sm:mt-16 isolate flex flex-col relative mb-8 w-full max-w-none justify-center;
  }
  #bergeSvg {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: auto;
    @apply max-h-[15rem] min-h-[5rem] -z-10;
  }
  #bergeSvg path {
    filter: drop-shadow(0px -5px 10px rgba(0, 0, 0, 0.1));
  }
  #motivationDiv {
    max-width: var(--site_width);
    @apply mb-8 sm:mb-[15rem] px-4;
  }
  #content {
    @apply flex flex-col-reverse items-center tracking-wide leading-10 gap-16 justify-between md:flex-row;
  }
  p {
    max-width: calc(var(--site_width) * 0.5);
    height: fit-content;
  }
  #portraitImage {
    border-radius: clamp(1rem, 3rem, 40%);
    background-color: rgb(200, 226, 198);
    width: clamp(10rem, 20rem, 25rem);
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.35);
  }
  #more {
    position: absolute;
    bottom: -1.5rem;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: center;
  }
  #more div {
    transform: rotate(45deg) translateY(-5px);
    border-radius: 10px;
    background-color: rgb(var(--color-accent));
    height: 3rem;
    width: 3rem;
  }

  #more svg {
    transform: rotate(-45deg);
    height: 3rem;
    width: 3rem;
    padding: 0.1rem;
  }
  @media only screen and (max-width: 640px) {
    h2,
    p {
      text-align: center;
    }
  }
</style>
