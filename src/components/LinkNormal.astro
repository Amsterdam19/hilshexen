---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
  decoration?: boolean;
  wFull?: boolean;
}

const {
  href,
  className,
  ariaLabel = "weitere Informationen aufrufen",
  title = "Mehr",
  disabled = false,
  wFull = false,
} = Astro.props;
---

<span class="block my-3">
  <a
    href={disabled ? "#" : href}
    tabindex={disabled ? "-1" : "0"}
    class={`group ${className}`}
    aria-label={ariaLabel}
    title={title}
    aria-disabled={disabled}
  >
    {title}
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"
      ><path
        fill="currentColor"
        d="M18 19H6c-.55 0-1-.45-1-1V6c0-.55.45-1 1-1h5c.55 0 1-.45 1-1s-.45-1-1-1H5a2 2 0 0 0-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2v-6c0-.55-.45-1-1-1s-1 .45-1 1v5c0 .55-.45 1-1 1M14 4c0 .55.45 1 1 1h2.59l-9.13 9.13a.996.996 0 1 0 1.41 1.41L19 6.41V9c0 .55.45 1 1 1s1-.45 1-1V4c0-.55-.45-1-1-1h-5c-.55 0-1 .45-1 1"
      ></path></svg
    >
  </a>
</span>

<style>
  a {
    padding-inline: 1.5rem;
    padding-block: 0.3rem;
    font-size: 1.2rem;
    width: fit-content;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgb(var(--color-fill));
    background-color: rgb(var(--color-text-base));
    @apply rounded-full underline-offset-4 focus-visible:no-underline focus-visible:underline-offset-0;
  }
  svg {
    @apply w-[1.2rem];
  }
</style>
